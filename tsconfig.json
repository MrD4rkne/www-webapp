{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./static/js/dist/",
    "rootDir": "./static/js/src/",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["static/js/src/*"]
    }
  },
  "include": [
    "./static/js/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}